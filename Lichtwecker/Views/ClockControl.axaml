<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:Lichtwecker.ViewModels"
             mc:Ignorable="d"
			 d:DesignWidth="800" d:DesignHeight="480"
			 Background="White"
			 WindowStartupLocation="CenterScreen"
			 WindowState="FullScreen"
             x:Class="Lichtwecker.ClockControl">
	
	<Design.DataContext>
		<vm:ClockViewModel/>
	</Design.DataContext>
	
	<Grid Background="Black" Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="260"/>
			<RowDefinition Height="40"/>
			<RowDefinition Height="100"/>
		</Grid.RowDefinitions>



		<Label Grid.Row="0" Content="{Binding Time}"
			   Foreground="White"
			   Height="275"
			   FontSize="270"
			   HorizontalAlignment="Center"
			   VerticalAlignment="Bottom"/>

		<Label Grid.Row="2" Content="{Binding Date}"
			   Foreground="White"
			   FontSize="58"
			   HorizontalAlignment="Center"/>
	</Grid>
</UserControl>
